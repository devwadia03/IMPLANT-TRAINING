			<select id="input">
			
				<option>select appropriate</option>
				<option>USER-ID</option>
				<option>NAME</option>
			</select>
			<input id="name" type="text" name="name" required>
		</div>
		<div>
			<label for="password">Password</label>
			<input id="password" type="password" name="password" required>
